<%- include('./partials/head.ejs') %>
<%- include('./partials/header.ejs') %>

    <!-- Main -->
    <section class="main">
        <ul class="breadcrumb">
            <li><a href="/">Inicio</a></li>
            <li><a href="#">Mi Cuenta</a></li>
            <li>Crear Cuenta</li>
        </ul>
        <section class="page-title">
            <h2>Crear cuenta</h2>
            <% if (locals.errors) { %>
                <% for( let oneError in errors ) { %>
                    <p>- <%= errors[oneError].msg  %> </p>
                <% } %>      
            <% } %>
        </section>
        <section class="account-page">
            <div class="container-form">
                <form action="/user/register" method="POST" enctype="multipart/form-data">
                    <div class="input-wrap">
                        <label for="firstName" class="form-label">Nombre</label>
                        <input type="text" name="firstName" id="firstName"  class="form-control" placeholder="Ej: Sofía Gutierrez">
                    </div>
                    <div class="input-wrap">
                        <label for="lastName" class="form-label">Apellido</label>
                        <input type="text" name="lastName" id="lastName"  class="form-control" placeholder="Ej: Sofía Gutierrez">
                    </div>
                    <div class="input-wrap">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" name="email" id="email"  class="form-control" placeholder="Ej: tunombre@email.com">
                    </div>
                    <div class="input-wrap">
                        <label for="category" class="form-label">Año Nacimiento</label>
                        <input type="number" name="category" id="category"  class="form-control" placeholder="Ej: 1987">
                    </div>
                    <div class="input-wrap">
                        <label for="avatar" class="form-label" >Imagen de perfil</label>
						<input type="file" name="avatar" class="form-control">
                    </div>
                    <div class="input-wrap">
                        <label for="password" class="form-label">Contraseña</label>
                        <input type="password" name="password" id="password" class="form-control" minlength="5">
                    </div>
                    <button class="btn-signup" type="submit">CREAR CUENTA</button>
                </form>
                <p class="log-in">
                    ¿Ya tenés una cuenta?
                    <a href="/user/login">Iniciá sesión</a>
                </p>
            </div>

        </section>


    </section>

    <!-- Footer -->

    <%- include('./partials/footer.ejs') %>