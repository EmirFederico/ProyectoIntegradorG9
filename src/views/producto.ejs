<%- include('./partials/head.ejs') %>
<%- include('./partials/header.ejs') %>

    <!-- Main -->
    <section class="main">
        <ul class="breadcrumb">
            <li><a href="/">Inicio</a></li>
            <li><a href="#">Productos</a></li>
            <li><%= product.name %></li>
        </ul>
    <div class="full--size">

        <div class="img--col">
        <!-- 1/3 de Izquierda -->
            <div class="full--size--left">
                <!-- <div class="product--small--img">
                    <img src="/img/<%= product.image %>" alt="">
                    <img src="/img/<%= product.image %>" alt="">
                    <img src="/img/<%= product.image %>" alt="">
                    <img src="/img/<%= product.image %>" alt="">
                </div> -->
            </div>

            <!-- 1/3 del Medio  -->
            
                <div class="product--img">
                    <%- include('./partials/carrousel.ejs') %>
                </div>

        </div>

        <!-- 1/3 derecho -->
        <div class="full--size--right">
            
            <div class="product--tp">
                <h2 class="product--title"><%= product.name %> | <%= product.categories.category  %> </h2>
                <h2 class="product--price">$<%= product.price %></h2>
            </div>


        <div class="product--buttons">
            <button class="button--1"> - <span> 1 </span> + </button>
            <button class="button--2"> Agregar al carrito </button>
        </div>

        <div class="product--description">
            <ul>
                <li>•  <%= product.description %></li>
                <li>•  Hecha con <b>algodón orgánico</b></li>
                <form class="product--selection" action="">
                <label for="sizes">Talle:</label>
                    <select id="sizes" name="sizes">
                      <option value="0">S</option>
                      <option value="1">M</option>
                      <option value="2">L</option>
                    </select> <br>
                <label for="cap-color">Color:</label>
                <select id="cap-color" name="cap-color">

                    <% for( let i = 0; i < product.colours.length; i++ ) { %>
                        <option value="<%= colours[i].colour.id %>"><%= colours[i].colour %></option>     
                    <% } %>

                    


                </select>
                    
                </form>
            </ul>
        </div>

        <div class="product--edit--btn">
            <a href="/producto/edit/<%= product.id %>" class="button--3"> EDITAR PRODUCTO </a>
            <form action="/producto/delete/<%= product.id %>?_method=DELETE" method="POST"> 
               <button type="submit" class="button--3">ELIMINAR PRODUCTO</button>  
            </form>
        </div>




        </div>


        

    </div>


    </section>

    <!-- Footer -->
    
    
    <%- include('./partials/footer.ejs') %>
