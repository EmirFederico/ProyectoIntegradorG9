<%- include('./partials/head.ejs') %>
<%- include('./partials/header.ejs') %>

    <!-- Main -->
    <section class="main">
        <ul class="breadcrumb">
            <li><a href="/">Inicio</a></li>
            <li><a href="#">Mi Cuenta</a></li>
            <li>Crear Cuenta</li>
        </ul>
        <section class="page-title">
            <h2>Crear cuenta</h2>
            <% if (locals.errors) { %>
                <% for( let oneError in errors ) { %>
                    <p>- <%= errors[oneError].msg  %> </p>
                <% } %>      
            <% } %>
        </section>
        <section class="account-page">
            <div class="container-form">
                <form action="/user/update/<%= user.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                
                    <div class="input-wrap">
                        <label for="avatar" class="form-label" >Imagen de perfil</label>
						<input type="file" name="avatar" class="form-control">
                    </div>
                    <button class="btn-signup" type="submit">Actualizar perfil</button>
                </form>
            </div>

        </section>


    </section>

    <!-- Footer -->

    <%- include('./partials/footer.ejs') %>