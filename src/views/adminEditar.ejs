<%- include('./partials/head.ejs') %>
<%- include('./partials/header.ejs') %>

    <!-- Main -->
    <section class="main">
        <ul class="breadcrumb">
            <li><a href="/">Inicio</a></li>
            <li><a href="#">Mi Cuenta</a></li>
            <li>Crear Cuenta</li>
        </ul>
        <section class="page-title">
            <h2>Estás editando: <i><%= product.name %></i> </h2>
        </section>
        <section class="account-page">
            <div class="container-form">
                <form action="/producto/edit/<%= product.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                    <div class="input-wrap">
                        <label for="productName" class="form-label">Nombre del producto</label>
                        <input type="text" name="name" id="productName"  class="form-control" placeholder="<%= product.name %>">
                    </div>
                    <div class="input-wrap">
                        <label for="price" class="form-label">Precio ($ARS)</label>
                        <input type="number" name="price" id="price"  class="form-control" placeholder="<%= product.price %>">
                    </div>
                    <div class="input-wrap">
                        <div class="productDescription">
                            <label for="productDescription" class="form-label">Descripción</label>
                            <input type="textarea" name="description" id="productDescription"  class="form-control" placeholder="<%= product.description %>">
                        </div>
                    </div>
                    <div class="input-wrap">
                        <div class="foto-usuario">
                            <label for="productImage" class="form-label">Imagen del producto</label>
                            <input type="file" name="productImage" id="productImage">
                        </div>
                    </div>
                    <div class="input-wrap">
                        <p>Categoría</p>
    
                        <section class="productCategory">
                            <input type="radio" name="category" id="gorras" value="gorras">
                            <label for="gorras" class="form-label">Gorras</label>
    
                            <input type="radio" name="category" id="accesorios" value="accesorios">
                            <label for="accesorios" class="form-label">Accesorios</label>
                        
                            <input type="radio" name="category" id="indumentaria" value="indumentaria">
                            <label for="indumentaria" class="form-label">Indumentaria</label>    
                        </section>
                    </div>
                    <div class="input-wrap">
                        <section class="productColour">
                            <p>Color</p>
                                <div class="checkbox">
                                    <input type="checkbox" name="colour" id="blanco" value="blanco">   
                                    <label for="blanco">Blanco</label>
                                </div>
                                
                                <div class="checkbox">
                                    <input type="checkbox" name="colour" id="negro" value="negro">
                                    <label for="negro">Negro</label>
                            
                                    
                                <div class="checkbox">
                                    <input type="checkbox" name="colour" id="Verde" value="Verde">
                                    <label for="Verde">Verde</label>
                                </div>                            
                                
                                <div class="checkbox">
                                    <input type="checkbox" name="colour" id="Bordo" value="Bordo">
                                    <label for="Bordo">Bordó</label>
                                </div>                            
                                
                                <div class="checkbox">
                                    <input type="checkbox" name="colour" id="Camel" value="Camel">
                                    <label for="Camel">Camel</label>
                                </div>

                                <div class="checkbox">
                                    <input type="checkbox" name="colour" id="Gris" value="Gris">
                                    <label for="Gris">Gris</label>
                                </div>        
                        </section>                                                         
                    </div>
                    <button class="btn-signup" type="submit">GUARDAR PRODUCTO</button>
                </form>
            </div>

        </section>


    </section>

    <!-- Footer -->

    <%- include('./partials/footer.ejs') %>